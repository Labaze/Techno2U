<% if @artist.picture_url.nil? %>
  <%= render 'shared/artist_banner', picture: "http://res.cloudinary.com/dozzulcez/image/upload/ownpy1x8yf0zriqij8hi"  %>
<% else %>
  <%= render 'shared/artist_banner', picture: "https://www.residentadvisor.net#{@artist.picture_url}"  %>
<% end %>

<div class="container container-artist-show my-3">
  <h1><%=  @artist.name %></h1>
  <h2 class="my-4">Next events</h2>
  <div class="d-flex flex-row flex-wrap justify-content-between">
    <% if @artist.parties.size > 2 %>
      <% @artist.parties.first(3).each do |party| %>
        <%= link_to party_path(party), class: "link-without-style" do  %>
          <%= render 'shared/party_card', party: party %>
        <% end %>
      <% end %>
    <% else %>
     <% @artist.parties.each do |party| %>
        <%= link_to party_path(party), class: "link-without-style" do  %>
         <%= render 'shared/party_card', party: party %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <h2 class="my-4">Listen to <%= @artist.name %></h2>
  <% @soundcloud.sounds_ids.each do |id| %>
      <%= render 'shared/soundcloud_player', soundcloud_id: "#{id}" %>
  <% end %>
</div>
