<div class="card">
  <%#= link_to party_attendings_path(party), method: :post  do%>
  <%= render 'shared/star_button', party: party%>
  <%# end %>
<!--   <div class="bar">
    <div class="emptybar"></div>
    <div class="filledbar"></div>
  </div> -->
  <div class="event-picture">
    <img src="https://www.residentadvisor.net<%= party.image_url %>" onerror="this.src='https://images.unsplash.com/photo-1513670144176-2211a82b531f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80';" alt="Missing Image" />
  </div>
  <h3 class="title m-3"><%= party.name.truncate(50) %></h3>
  <ul class="infos mt-5 ">
    <li class="d-flex align-items-center">
      <i class="far fa-user text-light"></i>
      <% party.artists.first(3).each do |artist| %>
        <%= artist.name %>
      <% end %>
    </li>
    <li class="d-flex align-items-center"><i class="far fa-calendar-alt text-light"></i><%= party.start_date.strftime("%d %B %Y") %>  at  <%= party.start_time %> <br> <%= party.end_date.strftime("%d %B %Y") %> at <%= party.end_time %></li>
    <li class="d-flex align-items-center"><i class="fab fa-houzz text-light"></i><%= party.venue_name %> - <%= party.venue_location %></li>
  </ul>
</div>

