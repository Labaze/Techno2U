<div class="profile-card-logged">
  <%= link_to party_path(party), class: "profile-content-grid link-no-underline" do %>
    <div class="profile-card-left">
      <img src="https://www.residentadvisor.net<%= party.image_url %>" onerror="this.src='https://images.unsplash.com/photo-1513670144176-2211a82b531f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80';" alt="Missing Image" />
    </div>

    <div class="profile-card-middle pt-3">
      <ul class="profile-card-infos">
      <h5 class="profile-card-title"><%= party.name.truncate(60) %></h5>
        <li class="d-flex align-items-center"><i class="far fa-user text-light"></i><%= party.artists.map(&:name).join("/ ").truncate(40) %></li>
        <li class="d-flex align-items-center"><i class="far fa-calendar-alt text-light"></i><%= party.start_date.strftime("%d %B %Y") %> at <%= party.start_time %> <br> <%= party.end_date.strftime("%d %B %Y") %> at <%= party.end_time %></li>
        <li class="d-flex align-items-center"><i class="fab fa-houzz text-light"></i><%= party.venue_name %> â€” <%= party.venue_location.truncate(80) %></li>
      </ul>
    </div>
    <div class="profile-card-right">
      <%= render 'shared/soundcloud_player', soundcloud_id: track %>
    </div>
    <%= render 'shared/star_button', party: party %>
  <% end %>
</div>


