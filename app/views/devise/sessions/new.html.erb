<div class="container container-form-login">

  <div class="login-picture">
    <img src="https://res.cloudinary.com/electronic-beats/w_2880,h_7998,c_fit,q_auto,f_auto/stage/uploads/2019/07/whole-festival-landscape-5.jpg" alt="">
  </div>

    <div class='form-infos'>
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary w-100"%>
        </div>
      <% end %>

      <div class="other-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
